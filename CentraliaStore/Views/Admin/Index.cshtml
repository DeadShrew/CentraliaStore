@model IEnumerable<CentraliaStore.Areas.Identity.AppUser>

<h1>Manage Users</h1>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <form asp-action="Edit" method="post">
                    <input type="hidden" name="Id" value="@user.Id" />

                <td>
                    <input name="Email" value="@user.Email" />
                </td>
                <td>
                    <input name="UserName" value="@user.UserName" />
                </td>
                <td>
                    <button type="submit">Save</button>
                    <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Delete this user?');">Delete</a>
                </td>
                </form>
            </tr>
        }
    </tbody>
</table>
