@model IEnumerable<CentraliaStore.Models.ApiKey>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApiSecret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApiSecret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApiKeyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApiKeyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApiKeyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
